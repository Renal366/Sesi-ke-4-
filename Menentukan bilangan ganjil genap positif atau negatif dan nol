print("Menentukan ganjil genap positif negatif atau nol")

bilangan = int(input("Masukkan sebuah bilangan: "))
if bilangan % 2 == 0:
    print("Bilangan tersebut adalah bilangan genap.")
else:
    print("Bilangan tersebut adalah bilangan ganjil.")
if bilangan > 0:
    print("Bilangan tersebut adalah bilangan positif.")
elif bilangan < 0:
    print("Bilangan tersebut adalah bilangan negatif.")
else:
    print("Bilangan tersebut adalah nol.")
